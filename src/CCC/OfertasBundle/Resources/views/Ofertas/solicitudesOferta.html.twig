                                 <td>{{ solicitud.codigo }}</td>
                                 <td>{{ solicitud.descripcion }}</td>
                                 <td>{{ solicitud.fechaLevantamiento | date('d.m.Y') }}</td>
                                 <td>{{ solicitud.fechaCuantificacion | date('d.m.Y') }}</td>
